
<% if true #signed_in? %>
  <div class="row">
    <aside class="span4">
      <div class='span-24 last'>
        <section>
          <h4>Recent Videos (click to watch)</h4>
          <% @recent_videos.each do |video| %>
            <div class='span-2'>
              <%= image_tag( "#{video.preview_image_url}", :class => 'span-2' ) %>
            </div>
          <% end %>
        </div>
      </section>  
      <section>
        <%#= render 'shared/user_info' %>
      </section>
      <section>
        <%#= render 'shared/stats' %>
      </section>
      <section>
        <%#= render 'shared/comments_form' %>
      </section>
    </aside>
  </div>  
<% else %>
  <div class="center hero-unit">
    <h1>Welcome to the Vlickr</h1>

    <h2>
      This is the home page for the Vlickr
      <a href="http://github.com/vothane/vlickr">Github</a>
      demo app for acts_as_voodoo gem
    </h2>

    <%= link_to "Sign up now!", signup_path, 
                                class: "btn btn-large btn-primary" %>
  </div>

  <%= link_to image_tag("rails.png", alt: "Rails"), 'http://rubyonrails.org/' %>
<% end %> 